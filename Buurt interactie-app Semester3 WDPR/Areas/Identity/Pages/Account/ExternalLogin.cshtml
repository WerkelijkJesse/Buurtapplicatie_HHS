@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registreer";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Vul gegevens in voor uw @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Succesvol bevestigd met <strong>@Model.ProviderDisplayName</strong>.
    Vul a.u.b. onderstaande gegevens en klik 'Registreer' om het inloggen af te ronden.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Postcode"></label>
                <input asp-for="Input.Postcode" class="form-control" />
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Naam"></label>
                <input asp-for="Input.Naam" class="form-control" />
                <span asp-validation-for="Input.Naam" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Registreer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
